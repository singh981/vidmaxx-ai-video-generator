{
    "$schema": "https://biomejs.dev/schemas/1.5.3/schema.json",
    "organizeImports": {
        "enabled": true
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true
        }
    },
    "css": {
        "parser": {
            "cssModules": true,
            "allowWrongLineComments": true
        }
    },
    "files": {
        "ignore": [
            ".next",
            "node_modules"
        ]
    }
}